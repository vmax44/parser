@model Order
@using (Html.BeginForm("Delete", "Parts", new { OrderId = ViewBag.OrderId }, FormMethod.Post,
    new
    {
        id = "parts_delete_form",
    }))
{
    @Html.AntiForgeryToken()
    <h4>Parts list:</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Каталожный номер")
            </th>
            <th>
                @Html.DisplayName("Наименование")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Parts)
        {
            <tr>
                <td onclick="script_(this)">@Html.DisplayFor(modelItem => item.PartNumber)</td>
                <td onclick="script_(this)">@Html.DisplayFor(modelItem => item.PartName)</td>
                <td>
                    <input type="checkbox" name="selectedparts" value="@item.Id" />
                </td>
            </tr>
        }
    </table>
}